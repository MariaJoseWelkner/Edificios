<div class= "">
    <h1>Crear Edificios</h1>

    <div class="col-6">
        <%= form_with(model: @edificio) do |form| %>
            <% if @edificio.errors.any? %>
                <div id="error_explanation">
                <h2><%= pluralize(@edificio.errors.count, "error") %> No se pudo crear el edificio: </h2>
                <ul>
                    <% @edificio.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                    <% end %>
                </ul>
                </div>
            <% end %>
            <div>
                <%= form.label :nombre%>
                <%= form.text_field :nombre, class: "form-control"%>
            </div>
            <div>
                <%= form.label :direccion%>
                <%= form.text_field :direccion, class: "form-control"%>
            </div>
            <div>
                <%= form.label :ciudad%>
                <%= form.text_field :ciudad, class: "form-control mb-5"%>
            </div>
            <div>
                <%= form.submit nil, class: "btn btn-primary"%>
             </div>


        <% end %>
    </div>
</div>
<%= link_to "Index", edificios_path, class: "btn btn-secondary mt-5"%> 
